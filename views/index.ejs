       <ul>
        <% let count=-1 %>
        <% messages.forEach((message) => { %>
            <li>
                <div>User: <%= message.user %> </div>
                <div> <%= message.text %> </div>
                <div> Date Added: <%= message.added %> </div>
                <% count++ %>
                <form action="/message/<%= count %>">
                    <input type="submit" value="Open">
                </form>
            </li>
        <% }) %>
       </ul>
       <form action="/new">
            <input type="submit" value="New Post">
       </form>
    </body>
</html>